<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LoginWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B2B4A"
    android:visibility="visible"
    tools:contentDescription="kakaoLoginButton"
    tools:visibility="visible">


    <TextView
        android:id="@+id/textview_login_top_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/giantsregulars"
        android:text="K-CROSSFIT"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textAlignment="center" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="411dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_gravity="center">

        <TextView
            android:id="@+id/textview_login_labelLogin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:fontFamily="@font/giantsregulars"
            android:paddingTop="20px"
            android:text="Log in"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:textSize="24sp" />

        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="219dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editText_login_id"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginBottom="5dp"
                    android:height="48dp"
                    android:background="#FFF"
                    android:ems="10"
                    android:fontFamily="@font/giantsregulars"
                    android:hint="id"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="30px"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editText_login_PasswordInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:height="48dp"
                    android:background="#fff"
                    android:ems="10"
                    android:fontFamily="@font/giantsregulars"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:paddingLeft="30px"
                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/button_login_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"

                android:fontFamily="@font/giantsregulars"
                android:text="로그인"
                tools:textSize="20sp" />
            <!--            android:backgroundTint="@color/white"-->
            <!--            android:background="@drawable/round"-->

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />


        <CheckBox
            android:id="@+id/checkBox_login_autoLogin"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:layout_marginLeft="90px"
            android:text="자동 로그인" />

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_login_signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/giantsregulars"
                android:text="회원가입" />

            <Button
                android:id="@+id/button_login_forgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/giantsregulars"
                android:text="비밀번호찾기" />
        </LinearLayout>

        <Button
            android:id="@+id/button_login_kakaoLogin"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:background="@drawable/kakao_login_medium_wide"
            tools:contentDescription="kakaoLoginButton" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="282dp"
        android:layout_height="366dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/_pngtree_weightlifting_villain_5395232"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.287" />


</androidx.constraintlayout.widget.ConstraintLayout>