<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#0B2B4A">

    <TextView
        android:id="@+id/TopText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/giantsregulars"
        android:text="K-CROSSFIT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopText">

        <TextView
            android:id="@+id/textview_chart_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/giantsregulars"
            android:text="홍길동"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_chart_maxMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/giantsregulars"
            android:text="계산중입니다..."
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textview_chart_userName2"
            app:layout_constraintTop_toTopOf="@+id/textview_chart_userName2" />

        <TextView
            android:id="@+id/textview_chart_totalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/giantsregulars"
            android:text="계산중입니다..."
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textview_chart_maxMonth"
            app:layout_constraintTop_toTopOf="@+id/textview_chart_userName4" />

        <TextView
            android:id="@+id/textview_chart_userName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/giantsregulars"
            android:text="가장 열심히 한 달 : "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_chart_userName4" />

        <TextView
            android:id="@+id/textview_chart_userName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/giantsregulars"
            android:text="총 운동 횟수 : "
            app:layout_constraintStart_toStartOf="@+id/textview_chart_userName2"
            app:layout_constraintTop_toBottomOf="@+id/textview_chart_userName" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/giantsregulars"
            android:text="님의 연간 운동횟수 통계"
            app:layout_constraintBottom_toBottomOf="@+id/textview_chart_userName"
            app:layout_constraintStart_toEndOf="@+id/textview_chart_userName" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_workoutChart"
            android:layout_width="349dp"

            android:layout_height="356dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent">

        </com.github.mikephil.charting.charts.BarChart>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_chart_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/giantsregulars"
        android:text="뒤로가기"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>